<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.kartuucapan.MainActivity">




    <ImageView
        android:id="@+id/photo_image_view"
        android:layout_width="547dp"
        android:layout_height="509dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kartu"
        tools:layout_editor_absoluteX="-77dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-35dp"
        android:contentDescription="@string/gambar_background" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="331dp"
        android:layout_height="48dp"
        android:text="SELAMAT ULANG TAHUN"
        android:fontFamily="sans-serif-light"
        android:textSize="28sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#660000"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="15dp" />
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semoga Panjang Umur"
        android:fontFamily="sans-serif-light"
        android:textSize="19sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#00a"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="71dp"
        tools:layout_editor_absoluteX="26dp" />
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sehat selalu"
        android:fontFamily="sans-serif-light"
        android:textSize="19sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#00a"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="101dp"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tercapai semua cita cita"
        android:fontFamily="sans-serif-light"
        android:textSize="19sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#00a"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="136dp"
        tools:layout_editor_absoluteX="26dp" />

    <ToggleButton
        android:id="@+id/toggleSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:checked="false"
        android:onClick="onToggleClicked"
        android:textColor="#00ff40"
        android:textOff="@string/play_music"
        android:textOn="@string/stop_music"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="461dp" />

    <TextView
        android:id="@+id/textView" 
        android:layout_width="256dp"
        android:layout_height="30dp"
        android:text="@string/di_kabulkan_do_a_nya"
        android:textSize="19sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#00a"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="168dp"
        tools:layout_editor_absoluteX="26dp" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:text="By "
        android:textSize="19sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#00a"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="461dp"
        tools:layout_editor_absoluteX="297dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:text="Fian "
        android:textSize="19sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#00a"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="485dp"
        tools:layout_editor_absoluteX="297dp"/>
</android.support.constraint.ConstraintLayout>